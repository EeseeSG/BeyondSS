{
  "expo": {
    "name": "LessonPlan",
    "slug": "lessonplan",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aaronkoh.lessonplan",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "Enable Camera Access so that you can capture and upload profile photos",
        "NSPhotoLibraryUsageDescription": "Enable Camera Roll Access so that you can upload profile photos from your Camera Roll",
        "NSLocationWhenInUseUsageDescription": "Location access is required to run the app."
      }
    },
    "android": {
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.aaronkoh.lessonplan",
      "googleServicesFile": "./google-services.json",
      "versionCode": 2,
      "permissions": ["CAMERA", "RECORD_AUDIO", "READ_CONTACTS", "READ_PHONE_STATE"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
